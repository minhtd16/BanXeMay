@model Models.EF.KhachHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <li><a href="#">Quản trị khách hàng</a></li>
    <li class="active"><a href="#">Thêm mới khách hàng</a></li>
}
@section jsFooter{

}
<script>
    $(document).ready(function ()
    {
        $("#datepicker").datepicker({
            dateFormat: 'dd/mm/yy'
        }).datepicker("setDate", new Date());    
    });
</script>
<div id="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Thêm mới khách hàng
                </div>
                <!-- /.panel-heading -->
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Tên khách hàng:</label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Giới tính</label>                         
                            <div class="col-md-2">
                                @Html.DropDownListFor(model => model.GioiTinh, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                            </div>                        
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Địa chỉ:</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Điện thoại:</label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Ngày sinh:</label>
                            <div class="col-md-2">
                                @*<input type="text" id="datepicker" class="form-control" title="Ngày giao dịch" value="" />*@
                                @Html.EditorFor(x => x.NgaySinh, new { htmlAttributes = new { @class = "form-control", @textmode = "date" } })                           
                                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Loại khách hàng:</label>
                            <div class="col-md-2">
                                @Html.DropDownListFor(model => model.LoaiKH,null, new { @class = "form-control" } )
                                @Html.ValidationMessageFor(model => model.LoaiKH, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label class="control-label col-md-2">Người nhập mới:</label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.CreateBy, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CreateBy, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-1">
                                <input type="submit" value="Thêm mới khách hàng" class="btn btn-info" />
                            </div>
                            <div class="col-md-offset-1 col-md-1">
                                <a href="@Url.Action("Index", "KhachHang")" class="btn btn-success">Quay lại trang trước</a>                               
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

