@model Models.EF.Kho

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
}
<div id="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Thêm mới kho hàng
                </div>
                <!-- /.panel-heading -->
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Tên kho:</label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Địa chỉ:</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Quản lý kho:</label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.QuanLyKho, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.QuanLyKho, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Số lượng tối đa:</label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.SLToiDa, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SLToiDa, "", new { @class = "text-danger" })
                            </div>
                        </div>
                     
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-1">
                                <input type="submit" value="Thêm mới kho" class="btn btn-primary" />
                            </div>
                            <div class="col-md-offset-1 col-md-1">
                                <a href="@Url.Action("Index", "Kho")" class="btn btn-success">Quay lại trang trước</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
