@model Models.EF.LoaiKhachHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <li><a href="#">Quản trị khách hàng</a></li>
    <li class="active"><a href="#">Loại khách hàng</a></li>
}
@section jsFooter{

}
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<div id="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Thêm mới loại khách hàng
                </div>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label col-md-2">Loại khách hàng:</label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-1">
                                <input type="submit" value="Thêm mới loại khách hàng" class="btn btn-info" />
                            </div>
                            <div class="col-md-offset-1 col-md-1">
                                <a href="@Url.Action("Index", "LoaiKhachHang")" class="btn btn-success">Quay lại trang trước</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



