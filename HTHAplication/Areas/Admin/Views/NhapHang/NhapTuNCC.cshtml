@using Models.Dao
@using Models.EF
@model HTHAplication.Areas.Admin.Models.NhapKhoView
@{
    ViewBag.Title = "NhapTuNCC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <li><a href="#">Quản trị nhập/xuất</a></li>
    <li class="active"><a href="#">Nhập hàng</a></li>

}
@{
    var dao = new NhaCungCapDao();
    List<NhaCungCap> lst_NCC = dao.GetAll();    
}

<script>

</script>

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Nhập hàng từ nhà cung cấp
            </div>
            <form>
                <div class="panel-body">

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày giao dịch:</label>
                        <div class="col-md-2">
                            <input type="text" placeholder="dd/mm/yyyy" class="form-control" title="Ngày giao dịch" value="" />
                        </div>
                        <label class="control-label col-md-2">Nhà cung cấp:</label>
                        <div class="col-md-2">
                            <select name="sl_staff" class="form-control" id="sl_staff" style="width:100%" onchange="return changeNCC(this);" title="Chọn nhà cung cấp">
                                @for (int i = 0; i < lst_NCC.Count(); i++)
                                {
                                    <option value="@lst_NCC.ElementAt(i).MaNCC">@lst_NCC.ElementAt(i).CongTy</option>
                                }
                            </select>
                        </div>
                        <!-- Sta NPE -->
                        <ul id="ul_staff" style="display:none;">
                            @for (int i = 0; i < lst_NCC.Count(); i++)
                            {
                                <li>
                                    <input name="ten" value="@lst_NCC.ElementAt(i).NguoiLienHe" />                                    
                                </li>
                            }
                        </ul>
                        <!-- End NPE -->
                        <label class="control-label col-md-2">Giám đốc:</label>
                        <div class="col-md-2">
                            <input type="text" name="txt_staffName" id="txt_staffName" disabled="disabled" class="form-control" title="Chủ công ty" value="" />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <br />
                    <div class="form-group">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Mã hàng</th>
                                        <th>Tên hàng</th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td>1</td>
                                        <td>Mark</td>
                                        <td>Otto</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>Jacob</td>
                                        <td>Thornton</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>Larry</td>
                                        <td>the Bird</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                </div>
                <!--div panel-body-->
            </form>
        </div>
    </div>

</div>
